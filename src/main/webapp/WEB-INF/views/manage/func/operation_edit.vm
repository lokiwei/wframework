#set($layout = "layout/submitNew.vm")
<script type="text/javascript" src="#springUrl('')/js/manage/func/operation_update.js"></script>

<div id="updateOperation">
    <div class="form-horizontal">
        <div class="control-group">
            <label class="control-label">操作编码 :</label>

            <div class="controls">
                <input type="text" id="operationCode" name="operationCode" value="${operation.operationCode}"
                       size="100px" data-rule="required;"/>

                <p class="help-block"></p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">操作名称 :</label>

            <div class="controls">
                <input type="text" id="operationName" name="operationName" value="${operation.operationName}"
                       size="100px" data-rule="required;"/>

                <p class="help-block"></p>
            </div>
        </div>

        <div class="control-group">
            <label class="control-label">操作描述 :</label>

            <div class="controls">
                <textarea id="description" name="description" cols="50" rows="2">${operation.description}</textarea>

                <p class="help-block"></p>
            </div>
        </div>
    </div>
</div>
<input type="hidden" id="id" value="${operation.id}"/>


  


