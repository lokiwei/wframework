#set($layout = "layout/submitNew.vm")
<script type="text/javascript" src="#springUrl('')/js/manage/task/scheduleJob_add.js"></script>

<div id="addScheduleJob">
	<div class="content">
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">任务名称</span>
					<input type="text" id="jobNameAdd" name="jobNameAdd" data-rule="required;"/>
				</div>
			</div>
		</div>
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">任务分组</span>
					<input type="text" id="jobGroupAdd" name="jobGroupAdd" data-rule="required;"/>
				</div>
			</div>
		</div>
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">运行时间表达式</span>
					<input type="text" id="cronExpressionAdd" name="cronExpressionAdd" data-rule="required;"/>
				</div>
			</div>
		</div>
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">任务调用类</span>
					<input type="text" id="beanClassAdd" name="beanClassAdd" data-rule="required;"/>
				</div>
			</div>
		</div>
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">任务调用方法</span>
					<input type="text" id="methodNameAdd" name="methodNameAdd" data-rule="required;"/>
				</div>
			</div>
		</div>
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">Spring ID</span>
					<input type="text" id="springIdAdd" name="springIdAdd" data-rule="required;"/>
				</div>
			</div>
		</div>
		<div class="grid">
			<div class="col">
				<div class="col-con">
					<span class="search-tag">任务描述</span>
					<textarea id="description" name="description" style="width:350px;height:130px;"></textarea>
				</div>
			</div>
		</div>
	</div>
</div>